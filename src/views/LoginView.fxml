<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.LoginViewController">
   <children>
      <VBox prefHeight="250.0" prefWidth="400.0">
         <children>
            <StackPane prefHeight="50.0" prefWidth="400.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Oaxaca Staff Login" textAlignment="CENTER">
                     <font>
                        <Font name="Calibri Bold" size="24.0" />
                     </font>
                  </Text>
               </children>
            </StackPane>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username :" />
                  <TextField fx:id="userField" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" spacing="20.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password  :" />
                  <PasswordField fx:id="passwordField" onAction="#loginSelected" />
               </children>
            </HBox>
            <StackPane prefHeight="25.0" prefWidth="400.0">
               <children>
                  <Text fx:id="errorMessage" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Username/Password is incorrect. Please try again." textAlignment="CENTER" visible="false" />
               </children>
            </StackPane>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" spacing="20.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <children>
                  <Button mnemonicParsing="false" onAction="#returnPush" prefHeight="40.0" prefWidth="80.0" text="Cancel" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#loginSelected" prefHeight="40.0" prefWidth="80.0" text="Log In" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
